{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24
  },
  "configurePresets": [
    {
      "name": "windows-msvc",
      "displayName": "Windows (MSVC + Ninja + vcpkg)",
      "description": "MSVC, Ninja and vcpkg integrated build",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "toolchainFile": "D:/Programs/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "environment": {
        "VSCMD_ARG_TGT_ARCH": "x64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug",
      "configurePreset": "windows-msvc",
      "description": "Debug build",
      "jobs": 8,
      "targets": [ "all" ]
    }
  ],
  "testPresets": []
}
