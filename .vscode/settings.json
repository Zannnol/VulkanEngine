{
    "cmake.useCMakePresets": "always",
    "cmake.configureOnOpen": true,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cmake.generator": "Ninja",
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.buildBeforeRun": true,
    "terminal.integrated.defaultProfile.windows": "Developer Command Prompt for VS 2022",
    "glsllint.additionalStageAssociations": {
        ".vsh": "vert",
        ".fsh": "frag"
    },
    "C_Cpp.intelliSenseEngine": "default",

    // GLSL linter
    "shadervalidator.glslangValidatorPath": "D:/Programs/VulkanSDK/Bin/glslangValidator.exe",
    "shadervalidator.glslversion": "450",
    "shadervalidator.defaultShaderType": "vert",
    "shadervalidator.targetEnv": "vulkan1.3",

    // Terminal profile
    "terminal.integrated.profiles.windows": {
        "Developer Command Prompt for VS 2022": {
            "path": "cmd.exe",
            "args": ["/k", "C:/Program Files (x86)/Microsoft Visual Studio/2022/BuildTools/VC/Auxiliary/Build/vcvars64.bat"],
            "icon": "terminal-cmd"
        }
    },
    "files.associations": {
        "stdexcept": "cpp",
        "algorithm": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "cctype": "cpp",
        "charconv": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
